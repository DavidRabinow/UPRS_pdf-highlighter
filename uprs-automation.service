[Unit]
Description=UPRS RPA Automation Service
After=network.target

[Service]
Type=simple
User=root
WorkingDirectory=/root/UPRS-RPA
Environment=PATH=/root/UPRS-RPA/venv/bin
ExecStart=/root/UPRS-RPA/venv/bin/gunicorn --workers 1 --bind 0.0.0.0:5000 wsgi:app
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target 